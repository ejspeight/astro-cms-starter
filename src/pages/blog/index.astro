---
/**
 * Blog Listing Page — Shows all blog posts sorted by date (newest first).
 */

import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);
---

<BaseLayout title="Blog" description="News, updates, and insights from our team.">
  <main class="flex-1">
    <!-- Page header -->
    <section class="bg-secondary text-text-light py-16 md:py-20 px-6">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold font-heading text-text-light">Blog</h1>
        <p class="mt-4 text-lg text-text-muted">News, updates, and insights from our team.</p>
      </div>
    </section>

    <!-- Posts grid -->
    <section class="py-12 md:py-16 px-6">
      <div class="max-w-4xl mx-auto">
        {posts.length === 0 ? (
          <p class="text-center text-text-muted text-lg">No posts yet. Check back soon!</p>
        ) : (
          <div class="space-y-8">
            {posts.map((post) => {
              // Build slug from the file ID (e.g. "2026-02-22-welcome" → "2026-02-22-welcome")
              const slug = post.id;
              const dateStr = new Date(post.data.date).toLocaleDateString("en-AU", {
                year: "numeric",
                month: "long",
                day: "numeric",
              });

              return (
                <article class="border border-border rounded-lg overflow-hidden hover:shadow-md transition-shadow">
                  <a href={`/blog/${slug}`} class="block p-6 md:p-8">
                    <div class="flex flex-wrap items-center gap-3 text-sm text-text-muted mb-2">
                      <time datetime={post.data.date.toISOString()}>{dateStr}</time>
                      {post.data.author && (
                        <>
                          <span>&middot;</span>
                          <span>{post.data.author}</span>
                        </>
                      )}
                    </div>
                    <h2 class="text-xl md:text-2xl font-bold font-heading hover:text-primary transition-colors">
                      {post.data.title}
                    </h2>
                    {post.data.seo_description && (
                      <p class="mt-2 text-text-body">{post.data.seo_description}</p>
                    )}
                  </a>
                </article>
              );
            })}
          </div>
        )}
      </div>
    </section>
  </main>
</BaseLayout>
